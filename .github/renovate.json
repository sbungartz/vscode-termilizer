{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "every 3 months on the first day of the month"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "every 3 months on the first day of the month"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "all non-major"
    }
  ]
}
